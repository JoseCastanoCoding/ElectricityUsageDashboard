@model IEnumerable<ElectricityUsageDashboard.Models.Reading>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReadingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentReading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBilledReading)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReadingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentReading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBilledReading)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReadingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReadingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReadingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
